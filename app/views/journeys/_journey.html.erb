<tbody>
  <tr>
    <td><%=link_to journey.name, journey%></td>
    <td><%=journey.departure_time.strftime('%a, %d-%b-%Y %H:%M %p') %></td>
    <td><%=link_to journey.arrival_time.strftime('%a, %d-%b-%Y %H:%M %p') %></td>

    <% max = max_seats(journey)%>
    <td><%=max%><br/></td>
    <td><%=free_seats(journey, max)%><br/></td>
  </tr>
</tbody>
