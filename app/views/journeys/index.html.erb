<p id="notice"><%= notice %></p>

<h1>Journeys</h1>

<table>
  <thead>
    <tr>
      <th>Bus</th>
      <th>Journey date</th>
      <th>Departure time</th>
      <th>Arrival time</th>
      <th>From</th>
      <th>To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journeys.each do |journey| %>
      <tr>
        <td><%= journey.bus.name %></td>
        <td><%= journey.journey_date %></td>
        <td><%= journey.departure_time %></td>
        <td><%= journey.arrival_time %></td>
        <td><%= journey.from.name %></td>
        <td><%= journey.to.name %></td>
        <td><%= link_to 'Show', journey %></td>
        <td><%= link_to 'Edit', edit_journey_path(journey) %></td>
        <td><%= link_to 'Destroy', journey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

