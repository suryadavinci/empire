


<h1>Transports</h1>

<table>
  <thead>
    <tr>

      <th>Transport</th>
      <th>From</th>
      <th>To</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Departure time</th>
      <th>Arrival time</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @transports.each do |transport| %>
      <tr>
        <td><%= transport.name %></td>
        <td><%= transport.from.name %></td>
        <td><%= transport.to.name %></td>
        <td><%= format_date(transport.start_date) %></td>
        <td><%= format_date(transport.end_date) %></td>
        <td><%= format_time(transport.departure_time) %></td>
        <td><%= format_time(transport.arrival_time) %></td>
        <td><%= recurrence(transport)%></td>
        <td><%= link_to 'Show', transport %></td>
        <td><%= link_to 'Edit', edit_transport_path(transport) %></td>
        <td><%= link_to 'Destroy', transport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transport', new_transport_path %>
