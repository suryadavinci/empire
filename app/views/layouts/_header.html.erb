<header class="navbar navbar-fixed-top navbar-inverse" id="grad">
      <div class="container">
        <%= link_to "EmpireBus", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav  navbar-right">
            <li><%= link_to "Home",   root_path %></li>
            <li><%= link_to "Help",   help_path %></li>

            <% if logged_in? %>
            <li><%= link_to "My Bookings",   bookings_path %></li>
            <li class="dropdown">

              <% if current_user.admin? %>
              <li>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Bus", buses_path %></li>
                <li><%= link_to "Destination", destinations_path %></li>
                <li><%= link_to "Journey", journeys_path %></li>
              </ul>
            </li>
              <% end %>
              <li>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
              </ul>


            <% else %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
</header>
