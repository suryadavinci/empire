<p id="notice"><%= notice %></p>

<h1>Buses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Max seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.name %></td>
        <td><%= bus.max_seats %></td>
        <td><%= link_to 'Show', bus %></td>
        <td><%= link_to 'Edit', edit_bus_path(bus) %></td>
        <!-- <td><%= link_to 'Destroy', bus, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

